rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios autenticados
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para clientes - solo usuarios autenticados pueden acceder
    match /clientes/{clienteId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para citas - solo usuarios autenticados pueden acceder
    match /citas/{citaId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para procedimientos - solo usuarios autenticados pueden acceder
    match /procedimientos/{procedimientoId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para servicios - solo usuarios autenticados pueden acceder
    match /servicios/{servicioId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para finanzas - solo usuarios autenticados pueden acceder
    match /finanzas/{finanzaId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para reportes - solo usuarios autenticados pueden acceder
    match /reportes/{reporteId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para configuraci√≥n - solo usuarios autenticados pueden acceder
    match /configuracion/{configId} {
      allow read, write: if request.auth != null;
    }
  }
}